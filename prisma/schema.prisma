generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  cpf      String   @unique
  password String
  role     UserRole
  parcel   Parcel[]

  @@map("users")
}

model Parcel {
  id              String    @id @default(uuid())
  cep             Int
  status          String
  trackingCode    String
  typeDeliveryman String
  responsibleId   String?
  responsible     User?     @relation(fields: [responsibleId], references: [id])
  recipientId     String
  recipient       Recipient @relation(fields: [recipientId], references: [id])
  imageUrl        String?

@@map("parcels")
}
model Recipient {
  id       String   @id @default(uuid())
  name     String
  Parcel   Parcel[]

  @@map("recipient")
}

model Deliveryman {
  id        Int     @id @default(autoincrement())
  name      String
  phone     String
  available Boolean @default(true)

  @@map("deliveryman")
}

enum UserRole {
  ADMIN
  DELIVERYMAN
}
