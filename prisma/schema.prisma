generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  cpf      String @unique
  password String
  role     Role

  parcel Parcel[]
}

enum Role {
  ADMIN
  DELIVERYMAN
}

model Parcel {
  id            String @id @default(uuid())
  cep           Int
  status        String
  rackingCode   String
  typeDelivery  String
  responsibleId String
  responsible   User?  @relation(fields: [responsibleId], references: [id])
}

model Recipient {
  id       String @id @default(uuid())
  name     String
  cep      String
  adderess String
  pohne    String
  email    String       @unique
}

model Deliveryman {
  id        Int     @id @default(autoincrement())
  name      String
  phone     String
  available Boolean @default(true)
}
